# Mattermost slash command token (from slash command creation)
MATTERMOST_SLASH_TOKEN=your_slash_command_token

# Mattermost bot token (for sending DMs)
# Create at: System Console → Integrations → Bot Accounts
MATTERMOST_URL=https://mattermost.hackerspace.gent
MATTERMOST_TOKEN=your_bot_token

# Shared secret with backend for /notify endpoint
# Generate with: openssl rand -hex 32
NOTIFY_SECRET=your_shared_secret

# Ed25519 private key for signing expense tokens
# Generate with: python -m services.tokens
ACCESS_TOKEN_PRIVATE_KEY=your_private_key

# Expense form URL
EXPENSE_URL=https://expenses.hackerspace.gent

# Server port
PORT=5000
